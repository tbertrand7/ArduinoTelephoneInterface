<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="seniordesign.arduinotelephoneinterface.ModeSelect">

    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/ARDUINO_MODE"
            android:id="@+id/btnArduinoMode"
            android:onClick="launchArduinoMode" android:textSize="28sp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/COMPUTER_MODE"
            android:id="@+id/btnComputerMode"
            android:layout_gravity="center_horizontal"
            android:onClick="launchComputerMode" android:textSize="28sp"/>

</LinearLayout>
